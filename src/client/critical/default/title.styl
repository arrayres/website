@import 'colors'
@import 'dimensions'

.site-title
  font-weight 700

@media (max-width: $mobile-portrait--small)
  .site-title
    margin 0
    font-size 7rem
    letter-spacing -0.4rem
@media (min-width: $mobile-portrait--small + 1) and (max-width: $mobile-portrait)
  .site-title
    margin 0
    font-size 9rem
    letter-spacing -0.6rem
@media (min-width: $mobile-portrait + 1) and (max-width: $mobile-landscape)
  .site-title
    margin 1rem
    font-size 3.6rem
    letter-spacing -0.2rem
@media (min-width: $mobile-landscape + 1)
  .site-title
    font-size 5rem
    letter-spacing -0.2rem

.section-title
  max-width 80%
  font-weight 700
  text-align center

@media (max-width: $mobile-portrait)
  .section-title
    margin 1rem
    font-size 2rem
@media (min-width: $mobile-portrait + 1) and (max-width: $mobile-landscape)
  .section-title
    margin 1rem
    font-size 2.6rem
@media (min-width: $mobile-landscape + 1)
  .section-title
    font-size 4rem

.site-title-hg
  color arrayres-color('alizarin')
  &::selection
    color arrayres-color('alizarin')

@media (max-width: $mobile-portrait)
  .site-title-nohg
    display none
@media (min-width: $mobile-portrait + 1)
  .site-title-nohg
    display inline

.title-sub--site
  font-size 2rem
  line-height 1.4
  font-weight 400
  max-width 80%
  text-align center

@media (max-width: $mobile-portrait--small)
  .title-sub--site
    font-size 1.2rem
    line-height 1.6
@media (min-width: $mobile-portrait--small + 1) and (max-width: $mobile-portrait)
  .title-sub--site
    font-size 1.4rem
    line-height 1.6
@media (min-width: $mobile-portrait + 1) and (max-width: $mobile-landscape)
  .title-sub--site
    font-size 1.2rem
    line-height 1.6
@media (min-width: $desktop)
  .title-sub--site
    max-width 50rem

@media (max-width: $mobile-portrait)
  .title-sub__we
    display none
  .title-sub__ar
    display inline
@media (min-width: $mobile-portrait + 1)
  .title-sub__we
    display inline
  .title-sub__ar
    display none
