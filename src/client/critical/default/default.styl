@import 'colors'
@import 'link'
@import 'section'
@import 'title'
@import 'page-marker'
@import 'nav-arrow'
@import 'nav-link'
@import 'text-block'

body
  font-family 'Open Sans'
  font-size 16px
  display flex
  flex-direction column
  align-items center
  color arrayres-color('midnight-blue')

::selection
  color arrayres-color('clouds')
  background-color arrayres-color('midnight-blue')

// When applied (see ./critical.coffee), keeps the
// address bar from disappearing when the page is
// scrolled to ensure constant height of sections:
html.mobile-chrome-keep-address-bar
  height 100%
  overflow hidden
  body
    height 100%
    overflow scroll
    -webkit-overflow-scrolling touch
